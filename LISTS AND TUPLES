fruits = ["apple", "banana", "cherry"]

# Accessing elements by index
first_fruit = fruits[0]  # "apple"
second_fruit = fruits[1]  # "banana"

# Modifying elements
fruits[2] = "strawberry"  # Update "cherry" to "strawberry"

# Adding elements to the end of the list
fruits.append("kiwi")

# Inserting elements at a specific index
fruits.insert(1, "orange")  # Insert "orange" at index 1

# Removing elements
fruits.remove("banana")  # Remove "banana" by value
popped_fruit = fruits.pop(2)  # Remove and return element at index 2

# Checking if an element exists in the list
if "apple" in fruits:
    print("Yes, 'apple' is in the list")

# Iterating through a list
for fruit in fruits:
    print(fruit)

# List length
num_fruits = len(fruits)

# Sorting a list
fruits.sort()  # Sort in ascending order
fruits.reverse()  # Reverse the order

